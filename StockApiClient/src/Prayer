class Prayer:
    def __init__(self, func, *args, **kwargs):
        self.func = func
        self.args = args
        self.kwargs = kwargs

    def please(self):
        return self.func(*self.args, **self.kwargs)


def prayer(func):
    def pray(*args, **kwargs):
        return Prayer(func, *args, **kwargs)
    return pray

@prayer
def pray(*args, **kwargs):
    print(*args, **kwargs)


if __name__ == '__main__':
    pray('please Lord!', 'Give me mone... khm, peaceful sleep.').please()
